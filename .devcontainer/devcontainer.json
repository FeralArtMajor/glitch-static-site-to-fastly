// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu

{
  "name": "Ubuntu",
  "image": "mcr.microsoft.com/devcontainers/base:noble",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "portsAttributes": {
    "3000-3010": {
      "label": "Site",
      "onAutoForward": "openPreview"
    },
    "5173-5180": {
      "label": "Site",
      "onAutoForward": "openPreview"
    },
    "8080-8090": {
      "label": "Site",
      "onAutoForward": "openPreview"
    },
    "7676": {
      "label": "Compute",
      "onAutoForward": "openPreview"
    }
  },
  "updateContentCommand": "npm install",
  "postAttachCommand": {
    "start": "npm run start",
    "build": "npm run build"
  },
  "waitFor": "updateContentCommand",
  "customizations": {
    "vscode": {
      "extensions": [
        "jkearins.action-buttons-ext@0.1.1"
      ],
      "settings": {
        "chat.sendElementsToChat.enabled": false,
        "editor.minimap.enabled": false,
        "actionButtons": {
          "commands": [
            {
              "name": "ðŸ’» Terminal",
              "singleInstance": true,
              "useVsCodeApi": true,
              "command": "workbench.action.terminal.toggleTerminal",
              "tooltip": "Open a terminal"
            },
            {
              "name": "ðŸ§ª Serve",
              "singleInstance": true,
              "command": "bash _migrate/serve.sh",
              "tooltip": "Test your Fastly Compute app"
            },
            {
              "name": "ðŸš€ Publish",
              "singleInstance": true,
              "command": "bash _migrate/publish.sh",
              "tooltip": "Publish your content to Fastly Compute"
            }
          ],
          "defaultColor": "none",
          "reloadButton": null
        }
      }
    }
  }
}
